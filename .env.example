# Database Configuration (automatically set by Railway)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Session Configuration
SESSION_SECRET=your-very-secure-session-secret-here

# Stripe Configuration (for subscription payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# SMTP Email Configuration (primary email service)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# OAuth Configuration (for social media platforms)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Application Configuration
NODE_ENV=production
PORT=5000