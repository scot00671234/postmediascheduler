# Railway Environment Variables Template
# Copy these variables to your Railway project environment settings

# Database (Railway PostgreSQL)
DATABASE_URL=${{ Postgres.DATABASE_URL }}

# Session Security
SESSION_SECRET=your-secure-session-secret-key-here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Stripe Configuration (Optional for Pro features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OAuth Configuration (Optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://your-app.railway.app/api/auth/linkedin/callback

TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=https://your-app.railway.app/api/auth/twitter/callback

# Application Configuration
NODE_ENV=production
PORT=3000